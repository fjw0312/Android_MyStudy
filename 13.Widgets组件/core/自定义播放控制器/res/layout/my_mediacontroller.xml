<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView 
        android:id="@+id/Tx_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:maxLines="2"
        android:text="XXXXXXXXX"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="#66666666"/>
    
    <!-- 后期 可以添加 滑动 调整 亮度 /声音 -->
    <LinearLayout 
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:orientation="horizontal">
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/ly_controlBar"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#66666666">
        <ImageView 
            android:id="@+id/img_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/play72"/> 
        <ImageView 
            android:id="@+id/img_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pause72"/>
        <TextView 
            android:id="@+id/Tx_timeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#ffffffff"
            android:textSize="14sp"/>

        <SeekBar 
            android:id="@+id/seekbar_id"          
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/myseekbar_pg_layer"
            android:thumb="@drawable/myseekbar_bn_selector"
            android:secondaryProgress="0"
            android:progress="0"/>

        <TextView 
            android:id="@+id/Tx_timeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#ffffffff"
            android:textSize="14sp"/>
        <ImageView 
            android:id="@+id/img_upDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mpg_up48"/>"
    </LinearLayout>

</FrameLayout>
