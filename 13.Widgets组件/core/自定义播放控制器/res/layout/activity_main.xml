<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/title">
        
        <Button 
            android:id="@+id/Bn_Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center_vertical"
            android:text="Exit"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:background="@drawable/button"/>
        <TextView 
            android:id="@+id/Tx_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Http请求测试"
            android:textSize="28sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"/>
        <Button 
            android:id="@+id/Bn_Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_gravity="center_vertical"
            android:text="Next"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:background="@drawable/button"/>
        
    </LinearLayout>
    

    <EditText 
        android:id="@+id/Ed_Url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"     
        android:layout_marginTop="2dp"  
        android:hint="请输入URL。。。"
        android:minLines="2"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:background="@drawable/my_editview_shape"/>

    
    <Button 
        android:id="@+id/Bn_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="请求获取数据"
        android:textSize="25sp"
        android:textColor="@android:color/background_light"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFF9D2E1"
        android:layout_marginBottom="4dp">
        <ScrollView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <TextView 
	            android:id="@+id/Tx_getContent"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"
	            android:textColor="@android:color/black"/>
	    </ScrollView>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText 
            android:id="@+id/Ed_PathName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:hint="请输入路劲"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp"
            android:background="@drawable/my_editview_shape2"/>
        
        <EditText 
            android:id="@+id/Ed_fileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:hint="请输入文件名"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp"
            android:background="@drawable/my_editview_shape2"/>     
    </LinearLayout>
    
    <Button 
        android:id="@+id/Bn_CreateFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:text="CreateFile"
        android:textSize="25sp"
        android:textColor="@android:color/holo_red_dark"/>

</LinearLayout>
