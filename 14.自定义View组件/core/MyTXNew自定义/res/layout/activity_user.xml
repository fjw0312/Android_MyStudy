<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout 
        android:id="@+id/Ly_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/holo_red_light"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center">
                <TXNews.customView.CircleImageView 
		            android:id="@+id/Img_usrLogo"
		            android:layout_width="80dp"
		            android:layout_height="80dp"
		            android:layout_marginBottom="1dp"
		            android:layout_gravity="bottom"  
		            android:src="@drawable/p011"
		            myattrs:border_width="2dp"
		            myattrs:border_color="@android:color/holo_blue_light"
		            myattrs:border_overlay="true">
	        	</TXNews.customView.CircleImageView>  
        </LinearLayout>
        
        <TextView 
            android:id="@+id/Tx_usrName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="User"
            android:textStyle="bold"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/Tx_title1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Title1"/>
            <LinearLayout 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#dadada"/>
            <TextView 
                android:id="@+id/Tx_title2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Title2"/>
           <LinearLayout 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#dadada"/>
            <TextView 
                android:id="@+id/Tx_title3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Title3"/>
        </LinearLayout>
        
        
    </LinearLayout>
   
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">      
       <TXNews.customView.MyUseListView
	      android:id="@+id/myUseListView_id"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent">
	   </TXNews.customView.MyUseListView>
	   
    </LinearLayout>
        

    <TXNews.customView.MyNavigationBar
        android:id="@+id/MyNavigationBar_id"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </TXNews.customView.MyNavigationBar>
    
</LinearLayout>
